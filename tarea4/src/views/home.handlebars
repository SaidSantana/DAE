<div class="container">
    <div class="row row-cols-1 row-cols-md-2 g-4">
        {{#each articles}}
        <div class="col">
            <div class="card">
                <a href="{{this.url}}"><img src="{{this.urlToImage}}" class="card-img-top" alt="{{this.title}}"></a>
                <div class="card-body">
                    <h2 class="card-title">{{this.title}}</h2>
                    <p class="card-text">{{this.description}}</p>
                    <h6>Autor: {{this.author}}</h6>
                    <a href="{{this.url}}" class="btn btn-primary">Seguir leyendo</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
